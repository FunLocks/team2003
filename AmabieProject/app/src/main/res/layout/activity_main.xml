            <!--            android:onClick="onClickSetting"-->
            <!--            android:text="Setting"-->
            <!--            tools:ignore="HardcodedText,MissingConstraints" />-->
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>