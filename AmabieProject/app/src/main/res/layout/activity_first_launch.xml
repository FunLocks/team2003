<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:background="@drawable/background">


    <LinearLayout
        android:id="@+id/allLayout"
        android:layout_width="415dp"
        android:layout_height="598dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <!--        <RelativeLayout-->
        <!--            android:id="@+id/gif"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="400dp">-->

        <!--            <Button-->
        <!--                android:id="@+id/changeText"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:onClick="chengText"-->
        <!--                android:text="ChangeText"-->
        <!--                tools:ignore="MissingConstraints" />-->


        <RelativeLayout
            android:id="@+id/gif"
            android:layout_width="match_parent"
            android:layout_height="295dp">

            <Button
                android:id="@+id/changeText"
                android:layout_width="match_parent"
                android:layout_height="324dp"
                android:background="#00000000"
                android:onClick="chengText"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/gifView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/gif" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/consoleView"
            android:layout_width="match_parent"
            android:layout_height="221dp">


            <TextView
                android:id="@+id/consoleText"
                android:layout_width="wrap_content"
                android:layout_height="141dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="49dp"
                android:layout_marginRight="49dp"
                android:fontFamily="@font/hanamina"
                android:text="我が名はアマビエじゃ。現世にもこびっと19なる疫病があらわれたようじゃの。わしが手ほどきをしてやろう。"
                android:textColor="@color/black"
                android:textSize="8pt"
                tools:ignore="HardcodedText" />


        </RelativeLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="わかった" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>